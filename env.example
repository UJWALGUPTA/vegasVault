# ============================================
# APT Casino Monad - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Next.js will automatically load .env.local

# Node Environment
NODE_ENV=development

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# Treasury Configuration
# ============================================
# Treasury wallet address (use one of these, or set all for compatibility)
# Note: If TREASURY_MNEMONIC is set, the address will be derived automatically
SOMNIA_TREASURY_ADDRESS=
MONAD_TREASURY_ADDRESS=
TREASURY_ADDRESS=

# Treasury mnemonic phrase (⚠️ RECOMMENDED - NEVER commit to git - use secure secret management)
# Use one of these, or set all for compatibility
# This is the preferred method as it's more secure and allows for multiple accounts
# ⚠️ WARNING: Replace with your actual mnemonic phrase - NEVER use this example in production!
TREASURY_MNEMONIC=
SOMNIA_TREASURY_MNEMONIC=
MONAD_TREASURY_MNEMONIC=

# Treasury private key (⚠️ LEGACY - Use mnemonic instead if possible)
# Only used if mnemonic is not set (for backward compatibility)
# Use one of these, or set all for compatibility
SOMNIA_TREASURY_PRIVATE_KEY=
MONAD_TREASURY_PRIVATE_KEY=
TREASURY_PRIVATE_KEY=

# ============================================
# Network RPC URLs
# ============================================
# Somnia Testnet RPC (use one of these, or set all for compatibility)
NEXT_PUBLIC_SOMNIA_TESTNET_RPC=https://dream-rpc.somnia.network/
NEXT_PUBLIC_MONAD_TESTNET_RPC=https://dream-rpc.somnia.network/
NEXT_PUBLIC_0G_GALILEO_RPC=https://dream-rpc.somnia.network/

# Somnia Mainnet RPC
NEXT_PUBLIC_SOMNIA_MAINNET_RPC=https://api.infra.mainnet.somnia.network/

# Arbitrum Networks
NEXT_PUBLIC_ARBITRUM_SEPOLIA_RPC=https://sepolia-rollup.arbitrum.io/rpc
NEXT_PUBLIC_ARBITRUM_ONE_RPC=https://arb1.arbitrum.io/rpc

# ============================================
# Network Explorer URLs
# ============================================
# Somnia Testnet Explorer (use one of these, or set all for compatibility)
NEXT_PUBLIC_SOMNIA_TESTNET_EXPLORER=https://shannon-explorer.somnia.network/
NEXT_PUBLIC_MONAD_TESTNET_EXPLORER=https://shannon-explorer.somnia.network/

# Somnia Mainnet Explorer
NEXT_PUBLIC_SOMNIA_MAINNET_EXPLORER=https://explorer.somnia.network

# ============================================
# Casino Contract Configuration
# ============================================
# Casino contract address (deployed on Somnia testnet/mainnet)
NEXT_PUBLIC_CASINO_CONTRACT_ADDRESS=

# ============================================
# Pyth Entropy Configuration
# ============================================
# Testnet Pyth Entropy Contract (use one of these, or set all for compatibility)
NEXT_PUBLIC_SOMNIA_PYTH_ENTROPY_CONTRACT=
NEXT_PUBLIC_MONAD_PYTH_ENTROPY_CONTRACT=

# Mainnet Pyth Entropy Contract
NEXT_PUBLIC_SOMNIA_MAINNET_PYTH_ENTROPY_CONTRACT=

# Testnet Pyth Entropy Provider (use one of these, or set all for compatibility)
NEXT_PUBLIC_SOMNIA_PYTH_ENTROPY_PROVIDER=
NEXT_PUBLIC_MONAD_PYTH_ENTROPY_PROVIDER=

# Mainnet Pyth Entropy Provider
NEXT_PUBLIC_SOMNIA_MAINNET_PYTH_ENTROPY_PROVIDER=

# ============================================
# Gas Configuration
# ============================================
GAS_LIMIT_DEPOSIT=21000
GAS_LIMIT_WITHDRAW=100000

# ============================================
# Deposit/Withdrawal Limits
# ============================================
MIN_DEPOSIT=0.001
MAX_DEPOSIT=100

# ============================================
# Network Selection
# ============================================
NEXT_PUBLIC_NETWORK=somnia-testnet

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/casino_vrf

# Option 2: Use individual connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=casino_vrf
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# Database Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# ============================================
# Redis Configuration
# ============================================
# Option 1: Use REDIS_URL (recommended)
REDIS_URL=redis://localhost:6379

# Option 2: Use individual connection parameters
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000
REDIS_KEY_PREFIX=vrf:

# ============================================
# VRF (Chainlink) Configuration
# ============================================
VRF_SUBSCRIPTION_ID=

# ============================================
# Blockchain Explorer API Keys
# ============================================
ARBISCAN_API_KEY=

# ============================================
# Livepeer Configuration
# ============================================
# Use one of these (NEXT_PUBLIC_* for client-side access)
NEXT_PUBLIC_LIVEPEER_API_KEY=
LIVEPEER_API_KEY=

